# Market Master - AI-Powered Trading Assistant
# Environment Configuration Template

# Application Configuration
APP_NAME=market-master
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://market_user:market_password@localhost:5432/market_master
REDIS_URL=redis://localhost:6379

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=market_master_ai

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=market-master-mlflow-artifacts

# Monitoring Configuration
EVIDENTLY_SERVICE_URL=http://localhost:8080
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api

# Model Configuration
MODEL_ACCURACY_THRESHOLD=0.6
MODEL_F1_THRESHOLD=0.5
RETRAINING_INTERVAL_DAYS=7

# Trading Configuration
GAME_DURATION_SECONDS=300
TICK_INTERVAL_SECONDS=1
MAX_POSITION_SIZE=2.0
RISK_FREE_RATE=0.02

# Asset Classes Configuration
SUPPORTED_ASSETS=equity,commodity,forex,crypto,indices
DEFAULT_ASSET_CLASS=equity

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Slack Configuration (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Docker Configuration
DOCKER_REGISTRY=your_docker_registry
DOCKER_IMAGE_NAME=market-master

# Kubernetes Configuration
KUBERNETES_NAMESPACE=market-master
KUBERNETES_REPLICAS=3

# Terraform Configuration
TERRAFORM_STATE_BUCKET=market-master-terraform-state
TERRAFORM_STATE_REGION=us-east-1 